doctype html
html
  head
    title SpaceNotice
    = stylesheet_link_tag    "application", media: "all"
    link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet"
    = javascript_include_tag "application"
    = csrf_meta_tags
  body
    header class="main-header"
      div class="wrapper"
        - if logged_in?
          h1 class="main-header-title typed" Hello, #{current_user.username}
        - else
          h1 class="main-header-title" Space Notice
        div class="main-header-auth"
          - if logged_in?
            = link_to "Logout", logout_path
          - else
            = link_to "Login", "/auth/github"
        div class="clearfix"

    = yield

    footer class="main-footer"
      | Created with <3 by <a href="http://github.com/releu">@releu</a>. Sponsored by <a href="http://github.com/evrone">@evrone</a>.

    javascript:
      $(function(){
        var diff = $(window).height() - $(document.body).height()
        if (diff > 0) {
          var footer = $(".main-footer")
          footer.height(diff + footer.height())
        }
      })

    javascript:
      var user = { id: "1" }
      var url = "https://space-notice.com"
      window.safari.pushNotification.requestPermission(url, "web.com.spacenotice", user, function(a) {console.log(a)});
